<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Browse Libraries</title>
</head>
<body>
    <h1>Browse Libraries</h1>
    <%- include('../partial/_nav.ejs') %>
    <h2>Libraries</h2>
    <ul>
        <% libraries.forEach(library => { %>
            <li>
                <a href="/users/<%= user._id %>/books/libraries/<%= library._id %>">
                    <%= library.name %>
                </a>
            </li>
        <% }) %>
    </ul>
    <h2>Books</h2>
    <ul>
        <% books.forEach(book => { %>
            <li>
                <a href="/users/<%= user._id %>/books/<%= book._id %>">
                    <%= book.title %> by <%= book.author %>
                </a>
            </li>
        <% }) %>
    </ul>
    <a href="/users/<%= user._id %>/books/new">Add a Book</a>
    <a href="/">Back to Home</a><div> </div><a href="/users/<%= user._id %>/books/">Back to Library</a>
  
</body>
</html>